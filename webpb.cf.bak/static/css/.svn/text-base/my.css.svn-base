.config-box{
    float:left;
    //width:420px;
}
.config-box p {
    line-height:20px;
    height:20px;
    margin:0px;
    cursor:default;
}
.config-box p:nth-child(even) {
#    background:#FAFAFA;
}
.config-box p:hover {
    background:#FAFAFA;
}
.config-box p.active {
    background:rgb(135, 135, 248);
    color:white;
}

.config-box input[type="radio"]{
    line-height:20px;
    height:20px;
    margin:0px;
    margin-right:5px;
}
.config-box input[type="text"]{
    border:solid 1px #eee;
    color:#979797;
    border-radius:6px;
    font-size:12px;
    padding:2px 6px;
    width:288px;
    margin:0px;
}
.clear{
    clear:both;
}

button{
    color: rgb(126, 126, 126);
    background: rgb(235, 235, 235);
    border: solid 0px rgb(255, 255, 255);
    margin: 0px;
    border-radius: 6px;
    font-size: 12px;
    line-height: 24px;
    height: 28px;
    padding: 2px 10px;
}
button:hover {
    background: #ccc;       
}
button.blue:hover {
    background:rgb(97, 97, 248);
}
button.blue{
    color:white;
    background:rgb(135, 135, 248);
    border:solid 0px rgb(135, 135, 248);
}
#select-client{
    margin:2px 15px;
        
}
#select-client button{
    width:55px;
    margin:6px 0px;
}
.my_description {
    padding-left: 40px;
    width: 920px;
    padding-right: 40px;
    margin-bottom: 30px;
    }
.content_text{
    margin-top:0px;
    color: #979797;

}
/*.table th, .table td{
    text-align:left;
}*/
.config-box td{
    padding:2px 5px;
}

